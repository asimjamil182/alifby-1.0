                  <td>{{ order.created_at }}</td>
                  <td>{{ order.total_price | money_with_currency }}</td>
                  <td>{{ order.financial_status }}</td>
                  <td>{{ order.fulfillment_status }}</td>
                  <td><a class="p-0.5 {{ settings.btn_style }} bg-primaryColor text-secondaryColor text-sm font-thin px-2" href="{{ order.customer_order_url }}">View</a></td>
                </tr>
              {%- endfor -%}
            </table>
