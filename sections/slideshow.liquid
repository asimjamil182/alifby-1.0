<section>
  <div class="layout p-0 {% if section.settings.isFullWidth %}lg:w-full{% endif %} {% if section.settings.isOverrideDefualt %}{{section.settings.theme_color}}{% else %}{{settings.default_color_scheme}}{% endif %}">
    {%- if section.settings.isFullWidth -%}
      <div class="w-full">
    {%- else -%}
      <div class="mx-auto">
    {%- endif -%}
    {%- if section.settings.slide_arrow -%}
      <div class="swiper-button-prev swiper-button-white"></div>
      <div class="swiper-button-next swiper-button-white"></div>
    {%- endif -%}
    <swiper-container
      style=" --swiper-navigation-size: {{section.settings.slide_arrow_size}}px; --swiper-pagination-color: var(--theme-primary-color); --swiper-navigation-color: var(--theme-primary-color);"
      class="image-swiper h-auto w-full"
      {%- if section.settings.slide_dot -%}
        pagination="{{section.settings.slide_dot}}"
        pagination-clickable="true"
      {%- endif -%}
      navigation="{{section.settings.slide_arrow}}"
      {%- if section.settings.slide_autoplay -%}
        autoplay-delay="{{section.settings.slide_autoplaytime}}"
        autoplay-disable-on-interaction="true"
      {%- endif -%}
      space-between="2"
      auto-height="true"
      loop="{{section.settings.slide_loop}}"
      slides-per-view="1"
      auto-height="true"
    >
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'image_slide' %}
            <swiper-slide class="flex h-auto {% if section.settings.slide_dot and section.blocks.size>1 %}pb-10 {% else %} pb-2{% endif %} ">
              <div class="relative w-full md:min-h-[auto] ">
                {% if block.settings.slide_image %}
                  <img
                    src="{{block.settings.slide_image | image_url}}"
                    width=""
                    height=""
                    class="w-full !hidden md:!block"
                    alt="hero slide"
                  >
                {% else %}
                  <img
                    src="https://placehold.co/1000x500"
                    width=""
                    height=""
                    class="w-full !hidden md:!block"
                    alt="hero slide"
                  >
                {% endif %}

                {%- if block.settings.mobile_image -%}
                  <div class="overflow-hidden md:!hidden shadow-md w-full">
                    <img
                      src="{{block.settings.mobile_image | image_url}}"
                      class=""
                      width="100%"
                      height=""
                      class="w-full"
                      alt="slide placeholder"
                    >
                  </div>
                {%- else -%}
                  {% if block.settings.slide_image %}
                    <div class="overflow-hidden md:!hidden shadow-md w-full">
                      <img
                        src="{{block.settings.slide_image | image_url}}"
                        class=""
                        width="100%"
                        height=""
                        class="w-full"
                        alt="slide placeholder"
                      >
                    </div>
                  {% else %}
                    <div class="overflow-hidden md:!hidden shadow-md w-full">
                      <img
                        src="https://placehold.co/500x500"
                        class=""
                        width="100%"
                        height=""
                        class="w-full"
                        alt="slide placeholder"
                      >
                    </div>
                  {% endif %}
                {%- endif -%}

                {%- if block.settings.isTextBox -%}
                  <div class="md:absolute top-0 left-0 right-0 bottom-0">
                    <div class="w-full md:h-full p-0 md:p-24 md:flex {{ block.settings.container_positionX }} {{ block.settings.container_positionY }}">
                      <div
                        class="p-5 {{ block.settings.container_text_align }}"
                        style="background:{{ block.settings.background | hex_to_rgba: block.settings.background_opacity }};"
                      >
                        {% if block.settings.slide_caption %}
                          <div
                            class="text-accentColor text-sm"
                          >
                            {{ block.settings.slide_caption }}
                          </div>
                        {% endif %}
                        {% if block.settings.slide_heading %}
                          <div
                            class=" text-primaryColor font-heading"
                            style="font-size:{{ block.settings.font_size }}px;"
                          >
                            {{ block.settings.slide_heading }}
                          </div>
                        {% endif %}
                        {% if block.settings.slide_pargarph %}
                          <div
                            class=" text-subtextColor text-sm"
                          >
                            {{ block.settings.slide_pargarph }}
                          </div>
                        {% endif %}
                        <br>
                        <a
                          href="{{block.settings.btn_url}}"
                          class="{{ settings.btn_style }}"
                        >
                          {{- block.settings.btn_txt -}}
                        </a>
                      </div>
                    </div>
                  </div>
                {%- endif -%}
              </div>
            </swiper-slide>
          {% when 'video_slide' %}
            <swiper-slide class="flex h-auto {% if section.settings.slide_dot %}pb-10 {% else %} pb-2{% endif %} ">
              <div class="relative w-full md:min-h-[auto] ">
                <div class="video-section flex items-center justify-center">
                  {%- if block.settings.video_object -%}
                    <video
                      style="width: 2000px;"
                      {% if block.settings.muted %}
                        muted
                      {% endif %}
                      loop
                      autoplay
                    >
                      {%- for source in block.settings.video_object.sources -%}
                        <source src="{{ source.url }}" type="{{ source.mime_type }}">
                      {%- endfor -%}
                      Your browser does not support the video tag.
                    </video>
                  {%- else -%}
                    <div class="w-full h-[717px] flex items-center justify-center bg-white">
                      <div class="text-textColor text-2xl">No video URL provided</div>
                    </div>
                  {%- endif -%}
                </div>
                {%- if block.settings.isTextBox -%}
                  <div class="md:absolute top-0 left-0 right-0 bottom-0">
                    <div class="w-full md:h-full p-0 md:p-24 md:flex {{ block.settings.container_positionX }} {{ block.settings.container_positionY }}">
                      <div
                        class="p-5 {{ block.settings.container_text_align }}"
                        style="background:{{ block.settings.background | hex_to_rgba: block.settings.background_opacity }};"
                      >
                        {% if block.settings.slide_caption %}
                          <div
                            class="text-textColor text-sm"
                          >
                            {{ block.settings.slide_caption }}
                          </div>
                        {% endif %}
                        {% if block.settings.slide_heading %}
                          <div
                            class=" text-primaryColor font-heading"
                            style="font-size:{{ block.settings.font_size }}px; "
                          >
                            {{ block.settings.slide_heading }}
                          </div>
                        {% endif %}
                        {% if block.settings.slide_pargarph %}
                          <div
                            class=" text-subtextColor text-sm"
                          >
                            {{ block.settings.slide_pargarph }}
                          </div>
                        {% endif %}
                        <br>
                        <a
                          href="{{block.settings.btn_url}}"
                          class="{{ settings.btn_style }}"
                        >
                          {{- block.settings.btn_txt -}}
                        </a>
                      </div>
                    </div>
                  </div>
                {%- endif -%}
              </div>
            </swiper-slide>
        {% endcase %}
      {% endfor %}
    </swiper-container>
  </div>
</section>

