<section>
  <div class="layout">
    <div class="flex items-center justify-center h-fit sm:p-4 lg:p-0">
      <div class="sm:w-full md:w-1/3 mt-5">
        <div class="title text-xl p-2 text-accentColor uppercase text-center">Customer Signup</div>
        {% form 'create_customer' %}
          <div class="flex gap-2">
            <div class="{{ settings.input_style }} my-2 flex-1">
              <input type="text" class="form_input" name="customer[first_name]" placeholder="First Name">
            </div>

            <div class="{{settings.input_style }} my-2 flex-1">
              <input type="text" class="form_input" name="customer[last_name]" placeholder="Last Name">
            </div>
          </div>

          <div class="{{settings.input_style }} my-3">
            <input type="email" class="form_input" name="customer[email]" placeholder="Email">
          </div>

          <div class="{{settings.input_style }} my-3">
            <input type="password" class="form_input" name="customer[password]" placeholder="Password">
          </div>

          <button class="submit {{ settings.btn_style }} text-center p-2 w-full" type="submit">Create Account</button>

          {%- if form.errors -%}
            <div class="p-2 my-2 text-sm bg-[#ffff] text-[#e04a4a]">
              {{ form.errors | default_errors }}
            </div>
          {%- endif -%}
        {% endform %}
        <div class=" text-subtextColor text-sm text-center">
          Already have account, <a class=" text-linkColor" href="/account/login">Login here</a>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Register User",
  "settings": [],
  "default": {}
}
{% endschema %}
