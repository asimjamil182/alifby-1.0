<section>
  <div class="layout">
    <div class="flex items-center justify-center sm:p-4 lg:p-0 h-[600px]">
      <div id="password_form" class="sm:w-full md:w-1/3 my-5 h-auto hidden">
        <div class="title text-xl p-2 text-accentColor uppercase text-center">Enter store using password</div>
        {% comment %} {% form 'storefront_password' %} {% endcomment %}
          <form method="post" action="/password" id="login_form" accept-charset="UTF-8" class="storefront-password-form">
          <div class="{{settings.input_style}} my-3">
            <input type="password" class="form_input" placeholder="your password" name="password">
          </div>

          <button type="submit" class="w-full {{ settings.btn_style }} p-2 text-center">Enter</button>
          {%- if form.errors -%}
            <div class="p-2 my-2 text-sm bg-[#ffff] text-[#e04a4a]">
              {{ form.errors | default_errors }}
            </div>
          {%- endif -%}
        </form>
        {% comment %} {% endform %} {% endcomment %}

      </div>
      <div id="subscribe_form" class="sm:w-full md:w-1/3 my-5 h-auto">
        <div class="title text-xl p-2 text-accentColor uppercase text-center">Opening soon</div>
        <p class="text-center text-subtextColor">Be the first to know when we launch.</p>
        {%- form 'customer' -%}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="{{settings.input_style}} my-3">
            <input type="email" name="contact[email]" required placeholder="Email" class="form_input" id="">
          </div>
          <button type="submit" class="w-full {{ settings.btn_style }} p-2 text-center">Subscribe</button>
          
          {%- if form.posted_successfully? -%}
            <div class="text-sm text-accentColor py-2">Thanks For Subcribe. We get in touch soon.</div>
          {%- endif -%}
        {%- endform -%}
        
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Password Page",
  "settings": [],
  "default": {}
}
{% endschema %}
