<section>
  <div class="layout bg-backgroundColor {% if section.settings.isOverrideDefualt %}{{section.settings.theme_color}}{% else %}{{settings.default_color_scheme}}{% endif -%}">
    {% if section.settings.heading %}
      <div class="section-heading">{{ section.settings.heading }}</div>
    {% endif %}
    {% if section.settings.tagline %}
      <div class="section-tagline">{{ section.settings.tagline }}</div>
    {% endif %}
    <div class="flex items-center justify-center sm:p-4 lg:p-0">
      <div class="sm:w-full md:w-1/3 my-5 h-auto">
        {% form 'contact' %}
          <div class="{{settings.input_style}} my-3">
            <input type="text" name="contact[first_name]" class="form_input" placeholder="First Name">
          </div>

          <div class="{{settings.input_style}} my-3">
            <input type="text" name="contact[last_name]" class="form_input" placeholder="Last Name">
          </div>

          <div class="{{settings.input_style}} my-3">
            <input type="tel" name="contact[phone]" class="form_input" placeholder="Phone No">
          </div>

          <div class="{{settings.input_style}} my-3">
            <input type="email" name="contact[email]" required class="form_input" placeholder="Email">
          </div>
          <div class="{{settings.input_style}} my-3">
            <textarea name="contact[body]" class="form_input" placeholder="Your message"></textarea>
          </div>

          <div class="{{ settings.btn_style }} p-2 text-center">
            <input type="submit" value="Send">
          </div>

          {%- if form.errors -%}
            <div class="p-2 my-2 text-sm bg-[#ffff] text-[#e04a4a]">
              {{ form.errors | default_errors }}
            </div>
          {%- endif -%}
        {% endform %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Contact Form",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default":"Contact Us"
    },
    {
      "type": "textarea",
      "id": "tagline",    
      "label": "Tag Line",
      "default": "Feel free to reach Us"
    },
    {
      "type": "header",
      "content": "Section Styling"
    },
    {
      "type": "checkbox",
      "id": "isOverrideDefualt",
      "label": "Override Default Theme",
      "default": false,
      "info": "This option will override the default theme scheme"
    },
    {
    "type": "color_scheme",
    "id": "color_scheme",
    "label": "Color Scheme",
    "info": "You can change scheme color in [Theme Settings](/sections/theme-settings)"
    },
    {
      "type": "select",
      "id": "btn_style",
      "label": "Button Style",
      "default": "btn-primary",
      "options": [
        {
          "value": "btn-primary",
          "label": "Primary"
        },
        {
          "value": "btn-secondary",
          "label": "Secondary"
        },
        {
          "value": "btn-accent",
          "label": "Accent"
        },
        {
          "value": "btn-ghost",
          "label": "Ghost"
        }
      ]
    },
    {
      "type": "select",
      "id": "input_style",
      "label": "Input Style",
      "default": "input-primary",
      "options": [
        {
          "value": "input-primary",
          "label": "Primary"
        },
        {
          "value": "input-secondary",
          "label": "Secondary"
        },
        {
          "value": "input-accent",
          "label": "Accent"
        },
        {
          "value": "input-ghost",
          "label": "Ghost"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Contact Form",
      "settings": {}
    }
  ],
  "disabled_on": {
    "templates": ["password"],
    "groups": ["footer", "header"]
  }
}
{% endschema %}
