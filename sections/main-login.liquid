<section>
  <div class="layout">
    <div class="flex items-center justify-center sm:p-4 lg:p-0">
      <div class="sm:w-full md:w-1/3 my-5 h-auto">
        <div class="title text-xl p-2 text-accentColor uppercase text-center">Customer Login</div>
        {% form 'customer_login' %}
          <div class="{{settings.input_style}} my-3">
            <input type="email" class="form_input" name="customer[email]" placeholder="Email">
          </div>

          <div class="{{settings.input_style}} my-3">
            <input type="password" class="form_input" name="customer[password]" placeholder="Password">
          </div>

          <button class="submit {{ settings.btn_style }} p-2 text-center w-full" type="submit">Login</button>

          {%- if form.errors -%}
            <div class="p-2 my-2 text-sm bg-[#ffff] text-[#e04a4a]">
              {{ form.errors | default_errors }}
            </div>
          {%- endif -%}
        {% endform %}
        <div class=" text-subtextColor text-sm text-center">
          Don't have account, <a class=" text-linkColor" href="/account/register">SignUp here</a>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Account Login",
  "settings": [],
  "default": {}
}
{% endschema %}
