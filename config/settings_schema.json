  {
    "name": "Color Schemes",
    "settings": [
      {
        "type": "color_scheme_group",
        "id": "color_schemes",
        "definition": [
          {
            "type": "color",
            "id": "primary",
            "default": "#1E90FF",
            "label": "Primary"
          },
          {
            "type": "color",
            "id": "secondary",
            "default": "#2ECC71",
            "label": "Secondary"
          },
          {
            "type": "color",
            "id": "accent",
            "default": "#FFCC00",
            "label": "Accent"
          },
          {
            "type": "color",
            "id": "background",
            "default": "#F5F5F5",
            "label": "Background"
          },
          {
            "type": "color_background",
            "id": "backgroundGradient",
            "label": "Background Gradient"
          },
          {
            "type": "color",
            "id": "heading",
            "default": "#333333",
            "label": "Heading"
          },
          {
            "type": "color",
            "id": "text",
            "default": "#333333",
            "label": "Text"
          },
          {
            "type": "color",
            "id": "subtext",
            "default": "#B5B5B5",
            "label": "Sub Text"
          },
          {
            "type": "color",
            "id": "separator_line",
            "default": "#E1E1E1",
            "label": "Separator Line"
          }
        ],
        "role": {
          "text": "text",
          "background": {
            "solid": "background",
            "gradient": "backgroundGradient"
          },
          "links": "accent",
