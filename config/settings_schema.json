  {
    "name": "Theme featured",
    "settings": [
      {
        "type": "checkbox",
        "id": "is_sticky_header",
        "label": "Sticky header",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_wishlist",
        "label": "Show Wishlist",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "show_language_selector",
        "label": "Show Language Selector",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_country_selector",
        "label": "Show Country Selector",
        "default": true
      }
    ]
  },
  {
    "name": "Logo",
    "settings": [
      {
        "type": "select",
        "id": "logo_type",
        "label": "Type",
        "options": [
          {
            "value": "image",
            "label": "Image"
          },
          {
            "value": "text",
            "label": "Text"
          }
        ]
      },
      {
        "type": "header",
        "content": "Setting for Type Image"
      },
      {
        "type": "image_picker",
        "id": "logo_img",
        "label": "Image"
      },
      {
        "type": "range",
        "id": "logo_size",
        "min": 50,
        "max": 100,
        "step": 10,
        "unit": "px",
        "label": "Logo Size",
        "default": 50
      },
      {
        "type": "header",
        "content": "Setting for Type Text"
      },
      {
        "type": "richtext",
        "id": "logo_txt",
        "label": "Text",
        "default": "<p>Logo Text<\/p>"
      },
      {
        "type": "color",
        "id": "logo_txt_color",
        "label": "Text color",
        "default": "#333"
      },
      {
        "type": "range",
        "id": "text_size",
        "min": 15,
        "max": 40,
        "step": 1,
        "unit": "px",
        "label": "Text Size",
        "default": 25
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "select",
        "id": "layout_width",
        "label": "Content Area Width",
        "options": [
          {
            "value": "100%",
            "label": "Full width"
          },
          {
            "value": "75%",
            "label": "Space Around"
          }
        ],
        "default": "75%",
        "info": "This setting apply on max devcies"
      },
      {
        "type": "range",
        "id": "section_space",
        "min": 0,
        "max": 50,
        "step": 1,
        "unit": "px",
        "label": "Sections Space",
        "default": 0
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "font_picker",
        "id": "type_header_font",
        "label": "Heading font",
        "default": "helvetica_n4"
