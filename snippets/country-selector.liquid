{% if localization.available_countries.size > 1 %}
  <localization-form style="height: 25px;">
    {% form 'localization' %}
      <custom-select id="" value="{{ localization.country.iso_code }}">
        <div
          id="dropdown_overlay"
          class="absolute top-0 bottom-0 left-0 right-0 bg-primaryColor opacity-5 z-20 hidden"
        ></div>
        <div id="dropdown_selector" class="{{settings.input_style }} w-full relative inline-block p-0 text-xs z-20 {{ class }}">
          <div class="flex gap-2 p-1 items-center">
            <label class="flex-1 capitalize">
              ({{ localization.country.currency.iso_code }}
              {{ localization.country.currency.symbol }})</label
            >
            <span>
              {% render 'icon', iconName: 'chevron-down', size: '13px', fill:color %}
            </span>
          </div>
          <div id="dropdown" class="absolute border-t border-separatorlineColor w-full bg-white text-textColor shadow-md hidden z-20 max-h-[150px] overflow-y-auto scroll scroll-sm">
            {% for country in localization.available_countries %}
              <option
                class="p-2 overflow-hidden hover:bg-secondaryColor hover:text-primaryColor"
                value="{{ country.iso_code }}"
                title="{{ country.name }} ({{ country.currency.iso_code }} {{ country.currency.symbol }})"
                label="({{ country.currency.iso_code }} {{ country.currency.symbol }})"
              >
                {{ country.name }} ({{ country.currency.iso_code }}
                {{ country.currency.symbol }})
              </option>
            {% endfor %}
          </div>
        </div>
      </custom-select>
      <input type="hidden" name="country_code" value="{{ localization.country.iso_code }}">
    {% endform %}
  </localization-form>
{% endif %}
