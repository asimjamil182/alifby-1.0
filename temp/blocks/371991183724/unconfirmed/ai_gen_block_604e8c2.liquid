{% doc %}
  @prompt
    A magazine-style editorial layout
{% enddoc %}

{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-magazine-layout-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-magazine-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-magazine-featured-{{ ai_gen_id }} {
    grid-column: span 8;
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-magazine-featured-image-{{ ai_gen_id }} {
    width: 100%;
    height: 600px;
    object-fit: cover;
    display: block;
  }

  .ai-magazine-featured-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 600px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-magazine-featured-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-magazine-featured-content-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 40px;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
    color: {{ block.settings.featured_text_color }};
  }

  .ai-magazine-featured-category-{{ ai_gen_id }} {
    display: inline-block;
    padding: 6px 16px;
    background-color: {{ block.settings.category_bg_color }};
    color: {{ block.settings.category_text_color }};
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 12px;
    border-radius: 2px;
  }

  .ai-magazine-featured-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.featured_title_size }}px;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 12px;
  }

  .ai-magazine-featured-excerpt-{{ ai_gen_id }} {
    font-size: 16px;
    line-height: 1.6;
    margin: 0 0 16px;
    opacity: 0.9;
  }

  .ai-magazine-featured-meta-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 16px;
    font-size: 14px;
    opacity: 0.8;
  }

  .ai-magazine-sidebar-{{ ai_gen_id }} {
    grid-column: span 4;
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-magazine-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_bg_color }};
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-magazine-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  }

  .ai-magazine-card-image-{{ ai_gen_id }} {
    width: 100%;
    height: 200px;
    object-fit: cover;
    display: block;
  }

  .ai-magazine-card-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 200px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-magazine-card-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
  }

  .ai-magazine-card-content-{{ ai_gen_id }} {
    padding: 24px;
  }

  .ai-magazine-card-category-{{ ai_gen_id }} {
    display: inline-block;
    padding: 4px 12px;
    background-color: {{ block.settings.category_bg_color }};
    color: {{ block.settings.category_text_color }};
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 12px;
    border-radius: 2px;
  }

  .ai-magazine-card-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_title_size }}px;
    font-weight: 700;
    line-height: 1.3;
    margin: 0 0 12px;
    color: {{ block.settings.card_text_color }};
  }

  .ai-magazine-card-excerpt-{{ ai_gen_id }} {
    font-size: 14px;
    line-height: 1.6;
    margin: 0 0 16px;
    color: {{ block.settings.card_text_color }};
    opacity: 0.8;
  }

  .ai-magazine-card-meta-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 13px;
    color: {{ block.settings.card_text_color }};
    opacity: 0.6;
  }

  .ai-magazine-secondary-grid-{{ ai_gen_id }} {
    grid-column: span 12;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin-top: {{ block.settings.grid_gap }}px;
  }

  .ai-magazine-card-horizontal-{{ ai_gen_id }} {
    display: flex;
    gap: 20px;
    background-color: {{ block.settings.card_bg_color }};
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-magazine-card-horizontal-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  }

  .ai-magazine-card-horizontal-image-{{ ai_gen_id }} {
    width: 180px;
    height: 180px;
    object-fit: cover;
    flex-shrink: 0;
  }

  .ai-magazine-card-horizontal-placeholder-{{ ai_gen_id }} {
    width: 180px;
    height: 180px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .ai-magazine-card-horizontal-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 120px;
    max-height: 120px;
  }

  .ai-magazine-card-horizontal-content-{{ ai_gen_id }} {
    padding: 20px 20px 20px 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  @media screen and (max-width: 1024px) {
    .ai-magazine-featured-{{ ai_gen_id }} {
      grid-column: span 12;
    }

    .ai-magazine-sidebar-{{ ai_gen_id }} {
      grid-column: span 12;
      flex-direction: row;
    }

    .ai-magazine-secondary-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-magazine-layout-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.6 }}px 16px;
    }

    .ai-magazine-featured-image-{{ ai_gen_id }},
    .ai-magazine-featured-placeholder-{{ ai_gen_id }} {
      height: 400px;
    }

    .ai-magazine-featured-content-{{ ai_gen_id }} {
      padding: 24px;
    }

    .ai-magazine-featured-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.featured_title_size | times: 0.7 }}px;
    }

    .ai-magazine-sidebar-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-magazine-secondary-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-magazine-card-horizontal-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-magazine-card-horizontal-image-{{ ai_gen_id }},
    .ai-magazine-card-horizontal-placeholder-{{ ai_gen_id }} {
      width: 100%;
      height: 200px;
    }

    .ai-magazine-card-horizontal-content-{{ ai_gen_id }} {
      padding: 20px;
    }
  }
{% endstyle %}

<div class="ai-magazine-layout-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-magazine-grid-{{ ai_gen_id }}">
    <article class="ai-magazine-featured-{{ ai_gen_id }}">
      {% if block.settings.featured_image %}
        <img
          src="{{ block.settings.featured_image | image_url: width: 1200 }}"
          alt="{{ block.settings.featured_image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.featured_image.width }}"
          height="{{ block.settings.featured_image.height }}"
          class="ai-magazine-featured-image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-magazine-featured-placeholder-{{ ai_gen_id }}">
          {{ 'hero-apparel-1' | placeholder_svg_tag }}
        </div>
      {% endif %}
      <div class="ai-magazine-featured-content-{{ ai_gen_id }}">
        {% if block.settings.featured_category != blank %}
          <span class="ai-magazine-featured-category-{{ ai_gen_id }}">{{ block.settings.featured_category }}</span>
        {% endif %}
        {% if block.settings.featured_title != blank %}
          <h2 class="ai-magazine-featured-title-{{ ai_gen_id }}">{{ block.settings.featured_title }}</h2>
        {% endif %}
        {% if block.settings.featured_excerpt != blank %}
          <p class="ai-magazine-featured-excerpt-{{ ai_gen_id }}">{{ block.settings.featured_excerpt }}</p>
        {% endif %}
        <div class="ai-magazine-featured-meta-{{ ai_gen_id }}">
          {% if block.settings.featured_author != blank %}
            <span>{{ block.settings.featured_author }}</span>
          {% endif %}
          {% if block.settings.featured_date != blank %}
            <span>{{ block.settings.featured_date }}</span>
          {% endif %}
        </div>
      </div>
    </article>

    <aside class="ai-magazine-sidebar-{{ ai_gen_id }}">
      {% for i in (1..2) %}
        {% liquid
          assign image_key = 'sidebar_image_' | append: i
          assign category_key = 'sidebar_category_' | append: i
          assign title_key = 'sidebar_title_' | append: i
          assign excerpt_key = 'sidebar_excerpt_' | append: i
          assign author_key = 'sidebar_author_' | append: i
          assign date_key = 'sidebar_date_' | append: i

          assign image = block.settings[image_key]
          assign category = block.settings[category_key]
          assign title = block.settings[title_key]
          assign excerpt = block.settings[excerpt_key]
          assign author = block.settings[author_key]
          assign date = block.settings[date_key]
        %}
        <article class="ai-magazine-card-{{ ai_gen_id }}">
          {% if image %}
            <img
              src="{{ image | image_url: width: 600 }}"
              alt="{{ image.alt | escape }}"
              loading="lazy"
              width="{{ image.width }}"
              height="{{ image.height }}"
              class="ai-magazine-card-image-{{ ai_gen_id }}"
            >
          {% else %}
            <div class="ai-magazine-card-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}
          <div class="ai-magazine-card-content-{{ ai_gen_id }}">
            {% if category != blank %}
              <span class="ai-magazine-card-category-{{ ai_gen_id }}">{{ category }}</span>
            {% endif %}
            {% if title != blank %}
              <h3 class="ai-magazine-card-title-{{ ai_gen_id }}">{{ title }}</h3>
            {% endif %}
            {% if excerpt != blank %}
              <p class="ai-magazine-card-excerpt-{{ ai_gen_id }}">{{ excerpt }}</p>
            {% endif %}
            <div class="ai-magazine-card-meta-{{ ai_gen_id }}">
              {% if author != blank %}
                <span>{{ author }}</span>
              {% endif %}
              {% if date != blank %}
                <span>{{ date }}</span>
              {% endif %}
            </div>
          </div>
        </article>
      {% endfor %}
    </aside>

    <div class="ai-magazine-secondary-grid-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign image_key = 'secondary_image_' | append: i
          assign category_key = 'secondary_category_' | append: i
          assign title_key = 'secondary_title_' | append: i
          assign excerpt_key = 'secondary_excerpt_' | append: i
          assign author_key = 'secondary_author_' | append: i
          assign date_key = 'secondary_date_' | append: i

          assign image = block.settings[image_key]
          assign category = block.settings[category_key]
          assign title = block.settings[title_key]
          assign excerpt = block.settings[excerpt_key]
          assign author = block.settings[author_key]
          assign date = block.settings[date_key]
        %}
        <article class="ai-magazine-card-horizontal-{{ ai_gen_id }}">
          {% if image %}
            <img
              src="{{ image | image_url: width: 400 }}"
              alt="{{ image.alt | escape }}"
              loading="lazy"
              width="{{ image.width }}"
              height="{{ image.height }}"
              class="ai-magazine-card-horizontal-image-{{ ai_gen_id }}"
            >
          {% else %}
            <div class="ai-magazine-card-horizontal-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}
          <div class="ai-magazine-card-horizontal-content-{{ ai_gen_id }}">
            {% if category != blank %}
              <span class="ai-magazine-card-category-{{ ai_gen_id }}">{{ category }}</span>
            {% endif %}
            {% if title != blank %}
              <h3 class="ai-magazine-card-title-{{ ai_gen_id }}">{{ title }}</h3>
            {% endif %}
            <div class="ai-magazine-card-meta-{{ ai_gen_id }}">
              {% if author != blank %}
                <span>{{ author }}</span>
              {% endif %}
              {% if date != blank %}
                <span>{{ date }}</span>
              {% endif %}
            </div>
          </div>
        </article>
      {% endfor %}
    </div>
  </div>
</div>

